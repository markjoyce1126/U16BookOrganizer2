<Window x:Class="WPFBookOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookOrganizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="325">
    <Grid Margin="0,0,10,0">
        <Button Name="inputFile" Content="INPUT" HorizontalAlignment="Left" Height="22" Margin="24,47,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click_In"/>
        <Button Name="outputFile" Content="OUTPUT" HorizontalAlignment="Left" Height="22" Margin="116,47,0,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.477,1.896" Click="Button_Click_Ou"/>
        <Button Name="go" Content="GO" HorizontalAlignment="Left" Height="22" Margin="205,47,0,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.477,1.896"  Click="Button_Click_Go"/>
        <TextBox Text="Select INPUT and OUTPUT files and click 'GO'" TextWrapping="Wrap" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="253" Height="20" Margin="24,10,0,0"  />
        <Button x:Name="createTemp" Content="CREATE TEMP" HorizontalAlignment="Left" Height="22" Margin="110,100,0,0" VerticalAlignment="Top" Width="84" Click="Button_Click_Temp_Create"/>

    </Grid>
</Window>
